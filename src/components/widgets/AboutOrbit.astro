---
import { Icon } from 'astro-icon/components';
---

<div class="relative mx-auto w-full max-w-sm">
  <div class="absolute -inset-6 rounded-3xl bg-gradient-to-br from-blue-500/20 via-cyan-400/10 to-transparent blur-2xl dark:from-blue-400/10 dark:via-cyan-400/10"></div>

  <div class="relative overflow-hidden rounded-2xl border border-slate-200/60 bg-white/70 p-6 backdrop-blur-sm shadow-lg dark:border-slate-700/60 dark:bg-slate-900/60">
    <div class="relative mx-auto h-72 w-72">
      <!-- Core badge -->
      <div class="absolute left-1/2 top-1/2 z-10 h-28 w-28 -translate-x-1/2 -translate-y-1/2 rounded-full bg-gradient-to-br from-blue-600 to-cyan-500 p-[2px]">
        <div class="flex h-full w-full items-center justify-center rounded-full bg-white dark:bg-slate-900">
          <span class="select-none text-sm font-semibold tracking-wide text-slate-800 dark:text-white">Engineer</span>
        </div>
      </div>

      <!-- Orbit path + icons -->
      <div class="pointer-events-none absolute inset-0 rounded-full border border-dashed border-slate-300/60 dark:border-slate-600/60"></div>

      <div class="absolute inset-0 animate-[spin_20s_linear_infinite]">
        <div class="absolute left-1/2 top-0 -translate-x-1/2 -translate-y-1/2">
          <div class="flex h-10 w-10 items-center justify-center rounded-full border border-slate-200/70 bg-white/90 shadow-sm dark:border-slate-700/70 dark:bg-slate-900/80">
            <Icon name="tabler:brand-python" class="h-6 w-6 text-blue-600 dark:text-cyan-400" />
          </div>
        </div>
        
        <div class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-1/2">
          <div class="flex h-10 w-10 items-center justify-center rounded-full border border-slate-200/70 bg-white/90 shadow-sm dark:border-slate-700/70 dark:bg-slate-900/80">
            <Icon name="tabler:brand-react" class="h-6 w-6 text-cyan-500" />
          </div>
        </div>
        
        <div class="absolute left-1/2 bottom-0 -translate-x-1/2 translate-y-1/2">
          <div class="flex h-10 w-10 items-center justify-center rounded-full border border-slate-200/70 bg-white/90 shadow-sm dark:border-slate-700/70 dark:bg-slate-900/80">
            <Icon name="tabler:brand-git" class="h-6 w-6 text-slate-700 dark:text-slate-300" />
          </div>
        </div>
        
        <div class="absolute left-0 top-1/2 -translate-x-1/2 -translate-y-1/2">
          <div class="flex h-10 w-10 items-center justify-center rounded-full border border-slate-200/70 bg-white/90 shadow-sm dark:border-slate-700/70 dark:bg-slate-900/80">
            <Icon name="tabler:brand-rust" class="h-6 w-6 text-blue-500" />
          </div>
        </div>     
      </div>

      <!-- Second ring (counter‑rotating) -->
      <div class="absolute inset-12 animate-[spin_26s_linear_infinite_reverse]">
        <div class="absolute left-1/2 top-0 -translate-x-1/2 -translate-y-1/2">
          <div class="flex h-8 w-8 items-center justify-center rounded-full border border-slate-200/60 bg-white/90 shadow-sm dark:border-slate-700/60 dark:bg-slate-900/80">
            <Icon name="tabler:number" class="h-5 w-5 text-orange-500" />
          </div>
        </div>
        <div class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-1/2">
          <div class="flex h-8 w-8 items-center justify-center rounded-full border border-slate-200/60 bg-white/90 shadow-sm dark:border-slate-700/60 dark:bg-slate-900/80">
            <Icon name="tabler:terminal" class="h-5 w-5 text-slate-700 dark:text-slate-300" />
          </div>
        </div>
        <div class="absolute left-1/2 bottom-0 -translate-x-1/2 translate-y-1/2">
          <div class="flex h-8 w-8 items-center justify-center rounded-full border border-slate-200/60 bg-white/90 shadow-sm dark:border-slate-700/60 dark:bg-slate-900/80">
            <Icon name="tabler:math-function" class="h-5 w-5 text-violet-500" />
          </div>
        </div>
        <div class="absolute left-0 top-1/2 -translate-x-1/2 -translate-y-1/2">
          <div class="flex h-8 w-8 items-center justify-center rounded-full border border-slate-200/60 bg-white/90 shadow-sm dark:border-slate-700/60 dark:bg-slate-900/80">
            <Icon name="tabler:cube" class="h-5 w-5 text-teal-500" />
          </div>
        </div>
      </div>
    </div>

    <!-- Quick chips -->
    <div class="mt-6 grid grid-cols-2 gap-2">
      <div class="flex items-center gap-2 rounded-full border border-blue-500/30 bg-blue-500/5 px-3 py-1 text-sm text-slate-700 shadow-sm dark:border-blue-400/30 dark:text-slate-200">
        <Icon name="tabler:layout-grid" class="h-4 w-4 text-blue-600 dark:text-blue-400" /> FEA & FEM
      </div>
      <div class="flex items-center gap-2 rounded-full border border-cyan-500/30 bg-cyan-500/5 px-3 py-1 text-sm text-slate-700 shadow-sm dark:border-cyan-400/30 dark:text-slate-200">
        <Icon name="tabler:wind" class="h-4 w-4 text-cyan-600 dark:text-cyan-400" /> CFD
      </div>
      <div class="flex items-center gap-2 rounded-full border border-violet-500/30 bg-violet-500/5 px-3 py-1 text-sm text-slate-700 shadow-sm dark:border-violet-400/30 dark:text-slate-200">
        <Icon name="tabler:cube" class="h-4 w-4 text-violet-600 dark:text-violet-400" /> CAD & CAE
      </div>
      <div class="flex items-center gap-2 rounded-full border border-teal-500/30 bg-teal-500/5 px-3 py-1 text-sm text-slate-700 shadow-sm dark:border-teal-400/30 dark:text-slate-200">
        <Icon name="tabler:device-desktop-code" class="h-4 w-4 text-teal-600 dark:text-teal-400" /> Full‑Stack
      </div>
    </div>
  </div>
</div>
