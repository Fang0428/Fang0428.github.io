---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links?: Array<Links>;
  secondaryLinks?: Array<Link>;
  socialLinks?: Array<Link>;
  footNote?: string;
  theme?: string;
  tagline?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  socialLinks = [],
  secondaryLinks = [],
  links = [],
  footNote = '',
  theme = 'light',
  tagline = "Designing and building delightful web experiences.",
  ctaText = 'Let\'s work together',
  ctaHref = '/contact',
} = Astro.props;

const year = new Date().getFullYear();
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative not-prose mt-16']} aria-labelledby="site-footer-heading">
  {/** Decorative gradient divider */}
  <div class="pointer-events-none" aria-hidden="true">
    <div class="h-px w-full bg-gradient-to-r from-transparent via-primary/50 to-transparent"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300">
    {/** Top CTA card */}
    <div class="my-10">
      <div
        class="rounded-2xl border border-gray-200/70 dark:border-slate-800/80 bg-white/70 dark:bg-slate-900/60 backdrop-blur supports-[backdrop-filter]:bg-white/50 supports-[backdrop-filter]:dark:bg-slate-900/40"
      >
        <div class="p-6 md:p-8 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div>
            <h2 id="site-footer-heading" class="text-xl md:text-2xl font-semibold text-heading">
              {SITE?.name}
            </h2>
            <p class="text-sm md:text-base text-muted mt-1">
              {tagline}
            </p>
          </div>
          <div class="flex items-center gap-3">
            <a
              href={ctaHref}
              class="inline-flex items-center gap-2 rounded-full px-5 py-2 text-sm font-semibold text-white bg-gradient-to-r from-primary via-secondary to-accent shadow-sm hover:brightness-110 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary/70"
            >
              <Icon name="tabler:sparkles" class="w-4 h-4" /> {ctaText}
            </a>
          </div>
        </div>
      </div>
    </div>

    {/** Intro + Icons row */}
    <div class="grid grid-cols-12 gap-6 md:gap-8 py-6">
      <div class="col-span-12 md:col-span-7 lg:col-span-8">
        <a class="inline-block font-bold text-xl" href={getHomePermalink()}>{SITE?.name}</a>
        <p class="mt-3 text-sm text-muted">
          I craft clean, accessible, and performance‑minded interfaces with a
          focus on great developer experience. Always learning. Always shipping.
        </p>
      </div>

      {socialLinks?.length ? (
        <div class="col-span-12 md:col-span-5 lg:col-span-4 flex justify-end items-start">
          <ul class="flex flex-wrap gap-2 mt-4 md:mt-0">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class="text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
                  aria-label={ariaLabel}
                  href={href}
                >
                  {icon && <Icon name={icon} class="w-5 h-5" />}
                  {text && <span class="sr-only" set:html={text} />}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ) : (
        ''
      )}
    </div>

    {/** Quick link columns */}
    {links?.length ? (
      <div class="grid grid-cols-12 gap-6 md:gap-8 pb-6">
        {links.map(({ title, links }) => (
          <div class="col-span-6 sm:col-span-4 md:col-span-3 lg:col-span-2">
            <div class="text-sm uppercase tracking-wide text-muted mb-2">{title}</div>
            {links && Array.isArray(links) && links.length > 0 && (
              <ul class="text-sm space-y-2">
                {links.map(({ text, href, ariaLabel }) => (
                  <li>
                    <a
                      class="text-muted hover:text-default hover:underline underline-offset-4 decoration-primary/40 transition-colors"
                      href={href}
                      aria-label={ariaLabel}
                    >
                      <Fragment set:html={text} />
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))}
      </div>
    ) : (
      ''
    )}

    {/** Bottom bar */}
    <div class="flex flex-col md:flex-row md:items-center md:justify-between py-6 border-t border-gray-200/70 dark:border-slate-800/80">
      {secondaryLinks?.length ? (
        <div class="text-sm text-muted order-2 md:order-1">
          {secondaryLinks.map(({ text, href }, index) => (
            <>
              {index !== 0 ? ' · ' : ''}
              <a class="hover:text-default hover:underline" href={href} set:html={text} />
            </>
          ))}
        </div>
      ) : (
        ''
      )}

      {footNote ? (
        <div class="text-sm mb-2 md:mb-0 order-1 md:order-2">
          <Fragment set:html={footNote} />
        </div>
      ) : (
        ''
      )}
    </div>
  </div>
</footer>
